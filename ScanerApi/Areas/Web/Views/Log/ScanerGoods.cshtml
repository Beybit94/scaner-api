@model IEnumerable<Business.Models.GoodsModel>

<table class="table" style="table-layout:fixed;">
    <tr>
        <th >
            Артикуль
        </th>
        <th >
            Название
        </th>
        <th >
            Количество
        </th>
        <th >
            ШК
        </th>
        <th >
            Короб
        </th>
        <th>
            Время
        </th>
    </tr>

    @foreach (var item in Model)
    {
        var box = item.BoxId == null || item.BoxId == 0 ?
            "" : Model.FirstOrDefault(m => m.Id == item.BoxId).BarCode;
        <tr>
            <td  style="padding-left:10px; padding-right:10px;">
                @Html.DisplayFor(modelItem => item.GoodArticle)
            </td>
            <td style="padding-left:10px; padding-right:10px;">
                @Html.DisplayFor(modelItem => item.GoodName)
            </td>
            <td style="padding-left:10px; padding-right:10px;">
                @Html.DisplayFor(modelItem => item.CountQty)
            </td>
            <td style="padding-left:10px; padding-right:10px;">
                @Html.DisplayFor(modelItem => item.BarCode)
            </td>
            <td style="padding-left:10px; padding-right:10px;">@box</td>
            <td style="padding-left:10px; padding-right:10px;">
                @Html.DisplayFor(modelItem => item.Created)
            </td>
        </tr>
    }

</table>
